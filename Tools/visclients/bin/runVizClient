#! /bin/bash

MYPATH=/usr/local/hemelbClient

case `uname -ms` in
    "Linux x86_64")
        #64 bit linux
        JOGL_LIB=$MYPATH/lib/jogl/jogl-1.1.1-linux-amd64/lib;
        JAVA_HOME=/usr/local64/stow/jdk1.5.0_10/ 
        OPTS=;
        ;;
    "Linux i686")
        #32 bit linux
        JAVA_HOME=/usr/local/stow/jdk1.5.0_10/;
        JOGL_LIB=$MYPATH/lib/jogl/jogl-1.1.1-linux-i586/lib;
        OPTS=;
        ;;
    "Darwin i386")
        #macos intel
        JAVA_HOME=/usr/;
        JOGL_LIB=$MYPATH/lib/jogl/jogl-1.1.1-macosx-universal/lib;
        OPTS=-Xdock:name="HemeLB Viz Client" -Xdock:icon=$MYPATH/lib/genius.png 
        ;;
esac

$JAVA_HOME/bin/java $OPTS -Djava.library.path=$JOGL_LIB -Xmx512m -jar $MYPATH/lib/hemelbVizClient.jar $@
